{
  "name": "hello-llama",
  "version": "1.0.0",
  "description": "Electron app for interacting with Ollama's llama3 model",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-win": "electron-packager . HelloLlama --platform=win32 --arch=x64 --out=dist --overwrite --icon=build/icon.ico",
    "package-mac": "electron-packager . HelloLlama --platform=darwin --arch=x64 --out=dist --overwrite --icon=build/icon.icns"
  },
  "build": {
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "docx": "^9.1.1",
    "mammoth": "^1.9.0",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-packager": "^17.1.2"
  }
}
